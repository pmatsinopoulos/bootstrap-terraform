resource "aws_ecs_cluster" "main" {
  name = "${var.project}-${var.environment}-main"

  setting {
    name  = "containerInsights"
    value = "enabled"
  }

  tags = {
    "Name" = "${var.project}-${var.environment}-main"
  }
}

output "main_cluster_name" {
  value       = aws_ecs_cluster.main.name
  description = "The ECS Cluster name"
}
